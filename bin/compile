#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

BUILD_DIR=$1
CACHE_DIR=$2

echo "Starphleet-mono-buildpack -  Compiling from build directory is :" ${BUILD_DIR}
echo "Starphleet-mono-buildpack -  Compiling from cache directory is :" ${CACHE_DIR}

apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
echo "deb http://download.mono-project.com/repo/debian wheezy main" | sudo tee /etc/apt/sources.list.d/mono-xamarin.list
apt-get update
apt-get -y -qq install mono-devel

echo "-----> Mono install SUCCESS"

echo "-----> Build SUCCESS"
