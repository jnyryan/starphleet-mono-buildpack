#!/usr/bin/env bash
# bin/detect <build-dir>

#set -e

BUILD_DIR=$1
LINKED_DIR=`readlink $1`

echo "Starphleet-mono-buildpack - Running DETECT. build symlinked directory: " ${LINKED_DIR}

if [ -f "$( find "${LINKED_DIR}" -maxdepth 2 -iname *.sln )" ]; then
  echo ".NET" && exit 0
else
  echo "no" && exit 1
fi
