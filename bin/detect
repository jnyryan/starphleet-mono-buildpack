#!/usr/bin/env bash
# bin/detect <build-dir>

BUILD_DIR=$1

echo "Starphleet-mono-buildpack - Detecting from build directory is :" ${BUILD_DIR}

curl -X POST -d "BuildPax doing DETECT" http://requestb.in/usywgrus

if [ -f "$( find ${BUILD_DIR} -maxdepth 2 -iname *.sln )" ]; then
  echo ".NET" && exit 0
else
  echo "no" && exit 1
fi
